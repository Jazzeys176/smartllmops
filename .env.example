# =============================================================================
# SmartLLMOps Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your actual values
# =============================================================================

# -----------------------------------------------------------------------------
# MLflow Configuration
# -----------------------------------------------------------------------------
ENABLE_MLFLOW=True

# Option 1: DagsHub MLflow (Recommended for cloud-based tracking)
MLFLOW_TRACKING_URI=https://dagshub.com/<your-username>/<your-repo>.mlflow/
MLFLOW_TRACKING_USERNAME=your_dagshub_username
MLFLOW_TRACKING_PASSWORD=your_dagshub_token

# Option 2: Local MLflow (for development)
# MLFLOW_TRACKING_URI=http://localhost:5000

# Option 3: Azure ML MLflow
# MLFLOW_TRACKING_URI=azureml://eastus.api.azureml.ms/mlflow/v1.0/subscriptions/<subscription-id>/resourceGroups/<resource-group>/providers/Microsoft.MachineLearningServices/workspaces/<workspace-name>

# -----------------------------------------------------------------------------
# App Settings
# -----------------------------------------------------------------------------
LOG_LEVEL=INFO
ENVIRONMENT=development

# -----------------------------------------------------------------------------
# Azure OpenAI Configuration
# -----------------------------------------------------------------------------
AZURE_OPENAI_KEY=your_azure_openai_api_key
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_DEPLOYMENT=gpt-4o-mini
AZURE_OPENAI_API_VERSION=2024-02-01

# -----------------------------------------------------------------------------
# Azure Cosmos DB Configuration
# -----------------------------------------------------------------------------
COSMOS_DB=llmops-data
COSMOS_CONN_READ=AccountEndpoint=https://your-cosmos-account.documents.azure.com:443/;AccountKey=your_read_account_key;
COSMOS_CONN_WRITE=AccountEndpoint=https://your-cosmos-account.documents.azure.com:443/;AccountKey=your_write_account_key;
